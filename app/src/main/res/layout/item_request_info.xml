<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        android:layout_marginBottom="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="7dp"
            android:layout_marginHorizontal="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteX"
                    app:strokeWidth="0dp"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Collect Food From"
                            android:textColor="@color/tia"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/shopNm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="3sp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Khan Food"
                            android:textColor="@color/darkY"
                            android:textSize="12sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3sp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Add. : "
                                android:textColor="@color/tia"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/shopAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3sp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Food Court"
                                android:textColor="@color/darkY"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteX"
                    app:strokeWidth="0dp"
                    android:layout_marginTop="7dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Drop Food To"
                            android:textColor="@color/tia"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/userNm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="3sp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Ahmad Umar Mahdi"
                            android:textColor="@color/darkY"
                            android:textSize="12sp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/greenPop"
                            app:cardCornerRadius="50dp"
                            app:strokeWidth="0dp">

                            <TextView
                                android:id="@+id/userType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_bold"
                                android:paddingHorizontal="6sp"
                                android:paddingVertical="2dp"
                                android:text="Student"
                                android:textColor="@color/whiteX"
                                android:textSize="9sp" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3sp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Add. : "
                                android:textColor="@color/tia"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/userAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3sp"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="504, 5th Floor, AB-4"
                                android:textColor="@color/darkY"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_marginStart="7dp"

                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="4dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:id="@+id/pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/gradient_shape"
                        android:scaleType="centerCrop"
                        android:background="@color/whiteX"
                        />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/greenPop"
                        app:cardCornerRadius="50dp"
                        android:layout_gravity="end"
                        android:layout_margin="7dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/deliveryCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="50"
                            android:paddingHorizontal="7dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/whiteX"
                            android:textSize="12sp"
                            app:drawableStartCompat="@drawable/ic_payments"
                            app:drawableTint="@color/whiteX"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/nm"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.google.android.material.card.MaterialCardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/foodNm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:maxLines="1"
                            android:text="Pizza 12 x1"
                            android:textColor="@color/whiteX"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Time"
                            android:textColor="@color/whiteX"
                            android:textSize="12sp"
                            app:drawableStartCompat="@drawable/ic_clock"
                            app:drawableTint="@color/whiteX"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/nm"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/btnAcceptDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/btn_tia_bg"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center"
                    android:text="Accept Delivery"
                    android:textColor="@color/whiteX"
                    android:textSize="14sp"
                    android:layout_margin="7dp"
                    />
            </LinearLayout>




        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>